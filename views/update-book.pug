extends layout.pug

block content 
  head
    title= books.title
    link(rel='stylesheet', href='/static/stylesheets/style.css')
    meta(name="viewport",content="width=device-width, initial-scale=0.7")
  body.search
    h1 Update Book
    if errors
      h2.error Oooops!
          ul.error
          each error in errors
            li= error.message
    form(action=`/books/${books.id}`, method="post")
      p
        label(for='title') Title
        input(name='title', id='title', type='text', value=`${books.title}`)
      p
        label(for='author') Author
        input(name='author', id='author' type='text', value=`${books.author}`)
      p
        label(for='genre') Genre
        input(name='genre', id='genre', type='text', value=`${books.genre}`)
      p
        label(for='year') Year
        input(name='year', id='year', type='text', value=`${books.year}`)
      p
        input(type='submit', value='Update Book')
    form(method='post', action=`/books/${books.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
      p
        a.button(href='/') Cancel
      p
        input(type='submit', value='Delete Book')
